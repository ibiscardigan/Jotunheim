# Global
datacenter    = "{{ consul_datacenter }}"
data_dir      = "{{ consul_data_dir }}"
bind_addr     = "{{ consul_bind_addr }}"
advertise_addr= "{{ ansible_host }}"
client_addr = "0.0.0.0"

# Enable the UI
ui = true

# Server mode
server = true
bootstrap_expect = 3
retry_join = {{ consul_server_peers | to_json }}

ports {
  dns = {{ consul_dns_port }}
}

dns_config {
  enable_truncate   = true
  only_passing      = true
}
